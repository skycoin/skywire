<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style name="BaseTheme" parent="Theme.AppCompat">
        <item name="colorPrimaryDark">@color/bar_background</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="isLightTheme">false</item>
        <item name="android:windowBackground">@drawable/background</item>

        <item name="android:fontFamily">@font/skycoin_font</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:lineSpacingMultiplier">1.3</item>

        <item name="android:colorFocusedHighlight">#00000000</item>
    </style>
    <style name="AppTheme" parent="BaseTheme"></style>
    <style name="EditWithTooltipTheme" parent="AppTheme">
        <item name="android:lineSpacingMultiplier">1</item>
    </style>
</resources>

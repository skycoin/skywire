<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/top_bar_height">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <EditText
                android:id="@+id/editTextRemotePK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="03d65df7e74a480ab645ade9ae45ec6280c9a86fef2a9e955d99361c9a678b61ee" />

            <EditText
                android:id="@+id/editTextPasscode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1234" />

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmp_main_page_start" />

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmp_main_page_stop" />

            <Button
                android:id="@+id/buttonSelect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmp_main_page_select" />

            <Button
                android:id="@+id/buttonApps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmp_main_page_select_apps" />

            <Button
                android:id="@+id/buttonSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tmp_main_page_settings" />

            <Button
                android:id="@+id/buttonStartPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show start page" />

            <TextView
                android:id="@+id/textStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Status" />

            <TextView
                android:id="@+id/textLastError1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/tmp_main_page_last_error"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textLastError2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textStopAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/tmp_main_page_can_not_stop"
                android:textColor="#FF0000" />

            <TextView
                android:id="@+id/textFinishAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/tmp_main_page_stopping"
                android:textColor="#FF0000" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_shadow_height"
        android:layout_marginTop="@dimen/top_bar_height"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/top_bar_shadow" />

    <com.skywire.skycoin.vpn.controls.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>